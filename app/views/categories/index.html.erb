<div class="container">

<h1>Categories</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Edit', edit_category_path(category) if current_user.has_role? :admin %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } if current_user.has_role? :admin %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<button><%= link_to 'Create New Category', new_category_path %></button>

</div>
