<div class="container">

<p><%= image_tag @user.profile.image_url(:thumb)%></p>


<p>
  <strong>Name:</strong>
  <%= @user.profile.full_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Location:</strong>
  <%= @user.profile.location.full_address %>
</p>

<button><%= link_to 'Edit', edit_user_path(@user) %></button>
<button><%= link_to 'Back', users_path %></button>

</div>
