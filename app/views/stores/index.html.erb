<div class="container">

<p id="notice"><%= notice %></p>

<h1>Stores</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Store Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.user.profile.first_name if store.user.profile.present?%>&nbsp;<%= store.user.profile.last_name if store.user.profile.present?%></td>
        <td><%= link_to 'Show', store %></td>

        <td><%= link_to 'Edit', edit_store_path(store) if current_user && current_user == store.user %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } if current_user && current_user == store.user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New Store', new_store_path %>

</div>
