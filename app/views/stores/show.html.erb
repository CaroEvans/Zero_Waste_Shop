<div class="container">

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @store.name %>
</p>

<% if @store.user.profile.present? %>
<p>
    <strong>Store Owner:</strong>
    <%= @store.user.profile.full_name %>
</p>
<p>
    <strong>Location:</strong>
    <%= @store.user.profile.location.full_address %>
</p>

<% end %>

<%= link_to 'Edit', edit_store_path(@store) %> |
<%= link_to 'Back', stores_path %>

</div>
