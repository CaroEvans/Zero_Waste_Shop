<div class="container">

  <p id="notice"><%= notice %></p>


<h1>Products</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Price</th>
      <th>Stock level</th>
      <th>Description</th>
      <th>Category</th>
      <th>Store</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.image_url(:thumb) %></td>
        <td><%= product.name %></td>
        <td>$<%= product.price %></td>
        <td><%= product.stock_level %></td>
        <td><%= product.description %></td>
        <td><%= product.category.name %></td>
        <td><%= product.store.name %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) if product.store.user == current_user %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } if product.store.user == current_user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%if user_signed_in? && current_user.store.present?%>
<button><%= link_to 'New Product', new_product_path %></button>
<% else %>
<button><%= link_to 'Create a Store to Post a Product', new_store_path %></button>
<% end %>

</div>
