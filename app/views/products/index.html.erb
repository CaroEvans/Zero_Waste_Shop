<% #hide pic for search %>
<% if !params[:search_term] %>
<div class="home-header">
  <div style="z-index:10; width:100%; height:100%; display:flex; justify-content:center; align-items:center; background-color:rgba(0,0,0,0.3)"><h1 class="feat-txt"><span class="cursive-txt">Live a zero waste life</span><br> with home-made food in<br>packaging that won't <br>cost the earth.</h1></div>
</div>
<% end %>
<% #hide pic for search %>

<div class="container">
<br>
<table class="table table-bordered">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Price</th>
      <th>Stock level</th>
      <th>Description</th>
      <th>Category</th>
      <th>Store</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><div class="image-cropper"><%= image_tag product.image_url(:thumb)%></div></td>
        <td><%= product.name %></td>
        <td>$<%= product.price %></td>
        <td><%= product.stock_level %></td>
        <td><%= product.description %></td>
        <td><%= product.category.name %></td>
        <td><%= product.store.name %></td>
        <td><%= link_to 'Show', product %></td>
        <% if product.store.user == current_user || user_signed_in? && current_user.has_role?(:admin)%>
        <td><%= link_to 'Edit', edit_product_path(product)%></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%if user_signed_in? && current_user.store.present?%>
<button><%= link_to 'Add New Product', new_product_path %></button>
<% else %>
<button><%= link_to 'Create a Store to Post a Product', new_store_path %></button>
<% end %>
<br>
<br>
</div>
