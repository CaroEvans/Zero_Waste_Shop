<div class="container">

<p id="notice"><%= notice %></p>

<p>
  <%= image_tag @product.image_url(:medium)%>
</p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  $<%= @product.price %>
</p>

<p>
  <strong>Stock level:</strong>
  <%= @product.stock_level %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Category:</strong>
  <%= @product.category.name %>
</p>

<p>
  <strong>Store:</strong>
  <%= @product.store.name %>
</p>

<% if current_user && current_user == @store.user %>
<%= link_to 'Edit', edit_product_path(@product) %> |
<% end %>

<%= link_to 'Back', products_path %>

</div>
